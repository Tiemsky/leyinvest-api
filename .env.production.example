# ============================================
# ENVIRONMENT: PRODUCTION
# Branch: main
# Domain: api.leyinvest.com
# ============================================

# Application
APP_NAME="LeyInvest"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://api.leyinvest.com

# Database PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=postgres_production
DB_PORT=5432
DB_DATABASE=leyinvest_production
DB_USERNAME=leyinvest_production
DB_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_PRODUCTION_SECURISE

# Redis
REDIS_HOST=redis_production
REDIS_PORT=6379
REDIS_PASSWORD=null

# Cache & Session & Queue
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail (Resend)
MAIL_MAILER=resend
RESEND_API_KEY=re_VOTRE_CLE_RESEND_PRODUCTION
MAIL_FROM_ADDRESS=noreply@leyinvest.com
MAIL_FROM_NAME="LeyInvest"

# Frontend
FRONTEND_URL=https://leyinvest.com

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Session
SESSION_LIFETIME=120
SESSION_DOMAIN=.leyinvest.com

# CORS
SANCTUM_STATEFUL_DOMAINS=leyinvest.com,www.leyinvest.com,api.leyinvest.com

# Broadcast
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# ============================================
# VARIABLES SPECIFIQUES PRODUCTION
# ============================================
# Rate limiting strict en production
THROTTLE_RATE_LIMIT=60

# Sentry (Monitoring optionnel)
# SENTRY_LARAVEL_DSN=https://your-sentry-dsn
# SENTRY_TRACES_SAMPLE_RATE=0.1
