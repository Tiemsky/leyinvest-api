# .env.ci – Configuration pour les tests CI (GitHub Actions)
# Ce fichier est COMMITÉ (pas de secrets !)

APP_NAME=Laravel
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stderr

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=laravel_test
DB_USERNAME=laravel
DB_PASSWORD=secret

REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# Utiliser des pilotes sans dépendance pour les tests
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# Désactiver les services externes
MAIL_MAILER=array
FILESYSTEM_DISK=local
SCOUT_DRIVER=null

# Désactiver l'horodatage des logs pour plus de lisibilité
LOG_STDERR_FORMATTER=Monolog\Formatter\LineFormatter
